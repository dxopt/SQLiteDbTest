<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/mode_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/mode_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_mode_recommend"
            android:checked="true" />
        <RadioButton
            android:id="@+id/mode_single_openhelper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_mode_single_openhelper" />

        <RadioButton
            android:id="@+id/mode_multiple_openhelper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option_mode_multiple_openhelper" />
    </RadioGroup>

    <Button
        android:id="@+id/single_thread"
        android:text="@string/btn_single_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/multiple_thread"
        android:text="@string/btn_multiple_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/multiple_process"
        android:text="@string/btn_multiple_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
